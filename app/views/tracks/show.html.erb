<h2><%= @track.name %></h2>
<% if @track.bonus %><small>bonus</small><% end %>
<p>From <%= link_to @track.album.name, album_url(@track.album) %> by <%= @track.band.name %></p>


<%= button_to "Edit", edit_track_url(@track), method: "get" %>
<%= button_to "Delete", band_url(@track), method: "delete" %>
<h3>Lyrics</h3>
<%= ugly_lyrics(@track.lyrics) %>

<h3>Notes</h3>
<%= render "notes/form", track: @track %>
<% @track.notes.each do |note| %>
  <%= render "notes/note", note: note %>
<% end %>
